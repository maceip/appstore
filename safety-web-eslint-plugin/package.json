{
  "name": "@safety-web/eslint-plugin",
  "version": "0.3.1",
  "license": "Apache-2.0",
  "author": "Google ISE Web Team",
  "repository": "https://github.com/google/safety-web",
  "main": "lib/src/index.js",
  "files": [
    "lib/src/**"
  ],
  "engines": {
    "node": "^20.11.0 || >21.2.0"
  },
  "scripts": {
    "build": "wireit",
    "lint": "eslint .",
    "test": "SAFETY_WEB_LOG_PATH=NONE mocha",
    "test:watch": "SAFETY_WEB_LOG_PATH=NONE mocha -r ts-node/register --watch --watch-files src/**/*.ts,test/**/*.ts"
  },
  "wireit": {
    "build": {
      "command": "tsc -b ./tsconfig.json",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.ts",
        "test/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "lib/**"
      ]
    }
  },
  "dependencies": {
    "@typescript-eslint/parser": "^8.0.0",
    "@typescript-eslint/utils": "^8.0.0",
    "debug": "^4.3.6",
    "eslint": "^8.56.0 <9.0.0",
    "tsutils": "^3.21.0",
    "typescript": "^5.5.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@types/chai": "^4.3.16",
    "@types/debug": "^4.1.12",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.9",
    "@typescript-eslint/rule-tester": "^8.0.0",
    "chai": "^5.1.1",
    "glob": "^11.0.1",
    "mocha": "^10.6.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.2",
    "typescript-eslint": "^8.0.0"
  },
  "peerDependencies": {
    "eslint": ">8.56.0",
    "typescript": "^5.5.0"
  }
}
